<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/CustomActionBarStyle</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/CustomActionBarStyle</item>
    </style>

    <style name="CustomActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>

        <item name="background">@color/colorPrimary</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="TextInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="MenuButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="CarButtons">
        <item name="android:layout_width">@dimen/car_Buttons_dimen</item>
        <item name="android:layout_height">@dimen/car_Buttons_dimen</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">@dimen/large_margin</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="PlayingButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Dexcriptions">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:layout_margin">@dimen/medium_margin</item>
    </style>

    <style name="Titles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:paddingLeft">@dimen/medium_margin</item>
        <item name="android:paddingRight">@dimen/medium_margin</item>
        <item name="android:paddingTop">@dimen/medium_margin</item>
    </style>

</resources>
